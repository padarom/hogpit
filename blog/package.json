{
  "name": "hogpit-blog",
  "description": "The Hogpit Blog",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "trustedDependencies": [
    "sharp"
  ],
  "trustedDependencies-annotation": "Needed for bun to allow running install scripts",
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.server": "vite build -c adapters/static/vite.config.ts",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "qwik": "qwik"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.8.0",
    "@builder.io/qwik-city": "^1.8.0",
    "@stefanprobst/remark-excerpt": "^2.0.2",
    "@stefanprobst/unified-util-bridge": "^2.0.1",
    "@types/eslint": "8.56.10",
    "@types/node": "20.14.11",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "@unpic/qwik": "^0.0.46",
    "autoprefixer": "^10.4.14",
    "eslint": "8.57.0",
    "eslint-plugin-qwik": "^1.8.0",
    "mdast-util-to-string": "^4.0.0",
    "postcss": "^8.4.31",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "remark-reading-time": "^2.0.1",
    "tailwindcss": "3.3.3",
    "typescript": "5.4.5",
    "undici": "*",
    "vite": "5.3.5",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "dependencies": {
    "@fontsource/merriweather": "^5.0.14",
    "@fontsource/righteous": "^5.0.21",
    "@fontsource/roboto": "^5.0.14",
    "@fontsource/roboto-mono": "^5.0.19",
    "@fontsource/twinkle-star": "^5.0.21",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.15"
  }
}
